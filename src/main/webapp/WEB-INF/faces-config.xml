<?xml version="1.0" encoding="UTF-8"?>
<faces-config
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
	version="2.3">
	
	<component>
		<component-type>org.primefaces.component.Calendar</component-type>
		<component-class>rs.ac.bg.etf.pm160695.infrastructure.component.CalendarWithNavigation</component-class>
	</component>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>register</from-outcome>
			<to-view-id>/pages/korisnickisistem/register.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>korisniciPretraga</from-outcome>
			<to-view-id>/pages/korisnickisistem/pretraga/korisniciPretraga.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>korisnicki-profil</from-outcome>
			<to-view-id>/pages/korisnickisistem/pretraga/korisnikProfil.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>testPretraga</from-outcome>
			<to-view-id>/pages/qt/test/testSearch.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>anketaPretraga</from-outcome>
			<to-view-id>/pages/qt/questionaire/questionaireSearch.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>tq-pregled</from-outcome>
			<to-view-id>/pages/qt/test/testSearch</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<application>
		<locale-config>
			<default-locale>sr</default-locale>
		</locale-config>
		
		<resource-bundle>
			<base-name>Labels</base-name>
			<var>labels</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>LabelsButton</base-name>
			<var>labelsButton</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>LabelsColumn</base-name>
			<var>labelsColumn</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>LabelsMessage</base-name>
			<var>labelsMessage</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>LabelsTitle</base-name>
			<var>labelsTitle</var>
		</resource-bundle>
		
		<message-bundle>ValidationMessages</message-bundle>
		
	</application>
	
</faces-config>